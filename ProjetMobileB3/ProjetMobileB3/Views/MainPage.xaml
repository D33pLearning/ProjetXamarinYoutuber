<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetMobileB3.Views.MainPage"
             Title="{Binding Title}"
             x:Name="MainPageX">

    <ScrollView>
        <StackLayout >
            <ListView ItemsSource="{Binding Youtubers}" x:Name="YoutubersList" 
                      SelectedItem="{Binding SelectedYoutuber, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell x:Name="Item"
                                   ImageSource="{Binding Logo}"
                                   Text="{Binding Nickname}"
                                   Command="{Binding BindingContext.NavigateToPublicProfilePageCommand, 
                            Source={x:Reference Name=MainPageX}}"
                        >
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="{Binding Test}"></Label>
            <Button Text="Ajouter un nouveau youtubeur!" Command="{Binding NavigateToAddYoutuberCommand}"></Button>
        </StackLayout>
    </ScrollView>
    

</ContentPage>